{% extends '::layout_admin.html.twig' %}

{% block titulo %} Gestion de Impresora{% endblock %}

{% block contenedor %}
	<div class="span12">
		<h3 class="text-panel"> Gestion de Impresora</h3>
		<table class="table table-striped">
			<thead>
			{% if entities %}
				<tr>
				<th>#</th>
	            <th>Nombre</th>
	            <th>Marca</th>
	            <th>Modelo</th>
	            <th>Tipo</th>
	            <th>Asignado a</th>
	            <th colspan="2" >Actions</th>
				</tr>
			</thead>
			<tbody>
			{% for impresora in entities %}
				<tr class="">
					<td>{{ loop.index }}</td>
					<td><a href="{{ path('impresora_show', { 'id': impresora.id }) }}">{{ impresora.alias }}</a></td>
					<td>{{ impresora.marca }}</td>
		 			<td>{{ impresora.modelo }}</td>
		 			<td>{{ impresora.tipo }}</td>
		 			{% if impresora.empleado %}
					<td><a href="{{ path('empleado_show', { 'id': impresora.empleado.id }) }}">{{ impresora.empleado }}</a></td>
					{% else %}
					<td>Sin Asignacion</td>		
					{% endif %}
					<td>
						<a href="{{ path('impresora_edit', { 'id': impresora.id }) }}">Editar</a>
					</td>
					<td>
						<a href="{{ path('impresora_delete', { 'id':impresora.id }) }}">Eliminar</a>
					</td>
				</tr>
			{% endfor %}
			{% else %}
							<tr>
								<th>
									<span>
									No Hay Empleados <a href="{{ path('empleado_new') }}">Crea Uno a Hora</a>
									<span>
								</th>
							</tr>
						 {% endif %}
			</tbody>
		</table>
	</div>

{% endblock %}


