{% extends '::layout_admin.html.twig' %}

{% block titulo %}Modificacion del Empleado{% endblock %}

{% block contenedor %}
<div class="span12">
				<div class="span12">
						<div class="widget-box">
							<div class="widget-title">
								<span class="icon">
									<i class="icon-align-justify"></i>									
								</span>
								<h5>Personal-info</h5>
							</div>
							<div class="widget-content nopadding">
								<form action="{{ path('empleado_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
									<div class="control-group">
										<label class="control-label">{{ form_label(edit_form.nombre,'Nombre : ') }}</label>
										<div class="controls">{{ form_widget(edit_form.nombre) }}</div>
									</div>
                                    <div class="control-group">
										<label class="control-label">{{ form_label(edit_form.apellidos,'Apellidos : ') }}</label>
										<div class="controls">{{ form_widget(edit_form.apellidos) }}</div>
									</div>
									<div class="control-group">
										<label class="control-label">{{ form_label(edit_form.correo,'Email : ')}}</label>
										<div class="controls">{{ form_widget(edit_form.correo) }}</div>
									</div>
                                    <div class="control-group">
                                        <label class="control-label">{{ form_label(edit_form.fechaNacimiento,'Fecha Nacimiento : ')}}</label>
                                        <div class="controls">
                                        	{{ form_widget(edit_form.fechaNacimiento)}}
                                            
                                        </div>
                                    </div>
									<div class="control-group">
										<label class="control-label">{{ form_label(edit_form.ordenadores,'Seleciona : ')}}</label>
										<div class="controls">
											{{ form_widget(edit_form.ordenadores)}}
                                             
										</div>
									</div>
									<div class="control-group">
										<label class="control-label">Message</label>
										<div class="controls">
											<textarea class="span20" ></textarea>
										</div>
									</div>
									<div class="form-actions">
										<button type="submit" class="btn btn-success">Save</button>
										<form action="{{ path('empleado_delete', { 'id': entity.id }) }}" method="post">
							            <button type="submit" class="btn btn-warning">Eliminar</button>
							        </form>
									</div>
								</form>
							</div>
						</div>						
					</div>
</div>
{% endblock %}